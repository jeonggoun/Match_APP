<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <!--완료, 글 작성하기, 닫기 들어가는 줄-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:text="닫기" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="center_horizontal|center_vertical"
            android:text="글 수정하기"
            android:textSize="20sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="10"
            android:text="수정" />


    </LinearLayout>

    <!--구분선-->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="153dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/postImage"
                android:layout_width="109dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@android:drawable/ic_menu_camera"
                tools:layout_editor_absoluteY="37dp" />


            <EditText
                android:id="@+id/etTitle"
                android:layout_width="380dp"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="글 제목"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="153dp" />

            <!--콤보박스-->
            <Spinner
                android:id="@+id/spinnerGame"
                android:layout_width="380dp"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:ems="10"
                android:text="종목 선택"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="153dp" />

            <EditText
                android:id="@+id/etFee"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:hint="￦ 참가비 (선택사항)"
                android:inputType="number" />


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="153dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"                    android:layout_weight="80"
                    android:layout_margin="2dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="선택한 일시가 표시됩니다"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="153dp"
                    android:textSize="15dp"/>

                <Button
                    android:id="@+id/selectDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_margin="2dp"
                    android:layout_weight="20"
                    android:ems="10"
                    android:text="일시 선택"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="153dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/etPlace"
                android:layout_width="380dp"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="장소 입력"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="153dp" />

            <Button
                android:id="@+id/selectPlace"
                android:layout_width="380dp"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="지도 첨부 (선택사항)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="153dp" />

            <TextView
                android:id="@+id/mapResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:textColor="#2196F3"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="153dp" />

            <EditText
                android:id="@+id/etContent"
                android:layout_width="383dp"
                android:layout_height="383dp"
                android:layout_margin="8dp"
                android:ems="10"
                android:gravity="top"
                android:hint="게시글 내용을 작성해주세요."
                android:inputType="textMultiLine|text|textImeMultiLine"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="384dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>