<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10px"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임 들어갈 공간"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/tv_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지역토큰 들어갈 공간"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/btn_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_custom_button03"
                android:gravity="center"
                android:padding="14dp"
                android:text="프로필 수정"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/lL_matchlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/etcf_1"
                    android:text="매칭목록"
                    android:textColor="#000000"
                    android:background="#00ff0000"
                    app:backgroundTint="#FFFFFF">
                </Button>
                <Button
                    android:id="@+id/lL_locationAuth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/etcf_2"
                    android:text="지역인증"
                    android:textColor="#000000"
                    android:background="#00ff0000"
                    app:backgroundTint="#FFFFFF">
                </Button>
                <Button
                    android:id="@+id/lL_favoritelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/etcf_3"
                    android:text="관심목록"
                    android:textColor="#000000"
                    android:background="#00ff0000"
                    app:backgroundTint="#FFFFFF">
                </Button>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFCCC8C8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf01"
                android:gravity="center_vertical"
                android:text="관심 카테고리 설정"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf02"
                android:gravity="center_vertical"
                android:text="키워드 알림"
                android:textColor="#000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFCCC8C8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf03"
                android:gravity="center_vertical"
                android:text="친구초대"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf04"
                android:gravity="center_vertical"
                android:text="모모 공유"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf05"
                android:gravity="center_vertical"
                android:text="공지사항"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf06"
                android:gravity="center_vertical"
                android:text="자주 묻는 질문"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/etcf07"
                android:gravity="center_vertical"
                android:text="앱설정"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>