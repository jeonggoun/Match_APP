<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--글 목록 들어갈 CardView-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <!--CardView 내에서 줄 나누기 위한 LinearLayout-->
        <LinearLayout
            android:id="@+id/chat_parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--첫 줄: 종목, 글 제목 가로로 넣기 위한 LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_tvGame"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="종목"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/chat_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="글 제목"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--둘째 줄: 이미지와 글 칸 나누기 위한 LinearLayout-->
                <LinearLayout
                    android:id="@+id/chat_imageLayout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp">

                        <!--글 이미지-->
                        <ImageView
                            android:id="@+id/chat_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chat_progressBar"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                    </FrameLayout>

                </LinearLayout>


                <!--일시, 장소, 참가비 등 입력하기 위해 줄 나누는 LinearLayout-->
                <LinearLayout
                    android:id="@+id/chat_contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/chat_tvTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="일시"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/chat_tvRecent"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text=""
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>