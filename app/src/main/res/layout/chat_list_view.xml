<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--글 목록 들어갈 CardView-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="false">

        <!--CardView 내에서 줄 나누기 위한 LinearLayout-->
        <LinearLayout
            android:id="@+id/chat_parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--첫 줄: 종목, 글 제목 가로로 넣기 위한 LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_background"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="이름"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/chat_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="글 제목"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--둘째 줄: 이미지와 글 칸 나누기 위한 LinearLayout-->
                <LinearLayout
                    android:id="@+id/chat_imageLayout"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp">

                        <!--글 이미지-->
                        <ImageView
                            android:id="@+id/chat_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:scaleType="fitXY" />

                        <ProgressBar
                            android:id="@+id/chat_progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>


                <!--일시, 장소, 참가비 등 입력하기 위해 줄 나누는 LinearLayout-->
                <LinearLayout
                    android:id="@+id/chat_contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCalanIcon"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            app:srcCompat="@drawable/calendar" />

                        <TextView
                            android:id="@+id/chat_tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="일시"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivChatIcon"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            app:srcCompat="@drawable/chat" />

                        <TextView
                            android:id="@+id/chat_tvRecent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="마지막 채팅"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4" />

</LinearLayout>